<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutRelative"
    tools:context="hueic.kenhoang.freakingmath_game.PlayActivity"
    android:background="@color/colorBackground2">

    <TextView
        style="@style/SmallTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvScore"
        android:text="0"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFormular"
        android:text="a + b"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/BigTextStyle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvResult"
        android:text="  = c"
        style="@style/BigTextStyle"
        android:layout_below="@+id/tvFormular"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnCorrect"
        android:background="@drawable/correct"
        android:layout_alignParentBottom="true"
        android:src="@drawable/background_wrong_correct"/>
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnWrong"
        android:background="@drawable/remove"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/background_wrong_correct"
        android:layout_alignParentRight="true" />
</RelativeLayout>
